<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MenuController">
   <center>
      <AnchorPane prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: #B0C4DE;" BorderPane.alignment="CENTER">
         <children>
            <Button layoutX="100.0" layoutY="50.0" mnemonicParsing="false" onAction="#vsPlayerButtonEvent" prefHeight="150.0" prefWidth="400.0" style="-fx-background-color: #32CD32; -fx-border-radius: 10;" text="VS PLAYER" textAlignment="CENTER">
               <font>
                  <Font name="Ubuntu Mono" size="60.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="OPEN_HAND" />
               </cursor>
            </Button>
            <Button layoutX="100.0" layoutY="220.0" mnemonicParsing="false" onAction="#vsIAButtonEvent" prefHeight="150.0" prefWidth="400.0" style="-fx-background-color: #0000CD;" text="VS AI" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Ubuntu Mono" size="60.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="OPEN_HAND" />
               </cursor>
            </Button>
            <Button layoutX="100.0" layoutY="430.0" mnemonicParsing="false" onAction="#optionsButtonEvent" prefHeight="100.0" prefWidth="400.0" style="-fx-background-color: #808000;" text="OPTIONS" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Ubuntu Mono" size="60.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="OPEN_HAND" />
               </cursor>
            </Button>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
